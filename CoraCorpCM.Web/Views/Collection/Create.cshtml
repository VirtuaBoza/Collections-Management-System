@model CoraCorpCM.Web.ViewModels.CollectionViewModels.CreatePieceViewModel

@{
    ViewData["Title"] = "Create";
}

@section Scripts
{
    <script src="~/js/create-piece-view.js"></script>
}

<h2>Create</h2>

<hr />

<form asp-action="Create">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4>Piece</h4>
            <div class="form-group">
                <label class="control-label">Accession Number</label>
                <input asp-for="Piece.AccessionNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Title</label>
                <input asp-for="Piece.Title" class="form-control" placeholder="Required" />
                <span asp-validation-for="Piece.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Subject</label>
                <input asp-for="Piece.Subject" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Medium</label>
                <select asp-for="Piece.MediumId" asp-items="Model.Media" class="form-control" id="medium-toggle">
                    <option value=""></option>
                    <option value="-1">- Create New -</option>
                </select>
            </div>
            <div class="form-group medium-toggle-target">
                <label class="control-label">New Medium</label>
                <input asp-for="Medium.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Genre</label>
                <select asp-for="Piece.GenreId" asp-items="Model.Genres" class="form-control" id="genre-toggle">
                    <option value=""></option>
                    <option value="-1">- Create New -</option>
                </select>
            </div>
            <div class="form-group genre-toggle-target">
                <label class="control-label">New Genre</label>
                <input asp-for="Genre.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Subgenre</label>
                <select asp-for="Piece.SubgenreId" asp-items="Model.Subgenres" class="form-control" id="subgenre-toggle">
                    <option value=""></option>
                    <option value="-1">- Create New -</option>
                </select>
            </div>
            <div class="form-group subgenre-toggle-target">
                <label class="control-label">New Subgenre</label>
                <input asp-for="Subgenre.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Subject Matter</label>
                <select asp-for="Piece.SubjectMatterId" asp-items="Model.SubjectMatters" class="form-control" id="subjectMatter-toggle">
                    <option value=""></option>
                    <option value="-1">- Create New -</option>
                </select>
            </div>
            <div class="form-group subjectMatter-toggle-target">
                <label class="control-label">New Subject Matter</label>
                <input asp-for="SubjectMatter.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Estimated Value</label>
                <div class="input-group">
                    <span class="input-group-addon">$</span>
                    <input asp-for="Piece.EstimatedValue" class="form-control text-right money-mask">
                </div>
                <span asp-validation-for="Piece.EstimatedValue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Permanent Location</label>
                <select asp-for="Piece.PermanentLocationId" asp-items="Model.Locations" class="form-control" id="permanentLocation-toggle">
                    <option value=""></option>
                    <option value="-1">- Create New -</option>
                </select>
            </div>
            <div class="form-group permanentLocation-toggle-target">
                <label class="control-label">New Location Name</label>
                <input asp-for="PermanentLocation.Name" class="form-control" placeholder="Required" />
                <span asp-validation-for="PermanentLocation.Name" class="text-danger"></span>
            </div>
            <div class="form-group permanentLocation-toggle-target">
                <label class="control-label">New Location Address Line 1</label>
                <input asp-for="PermanentLocation.Address1" class="form-control" />
            </div>
            <div class="form-group permanentLocation-toggle-target">
                <label class="control-label">New Location Address Line 2</label>
                <input asp-for="PermanentLocation.Address2" class="form-control" />
            </div>
            <div class="form-group permanentLocation-toggle-target">
                <label class="control-label">New Location City</label>
                <input asp-for="PermanentLocation.City" class="form-control" />
            </div>
            <div class="form-group permanentLocation-toggle-target">
                <label class="control-label">New Location State</label>
                <input asp-for="PermanentLocation.State" class="form-control" />
            </div>
            <div class="form-group permanentLocation-toggle-target">
                <label class="control-label">New Location Zip Code</label>
                <input asp-for="PermanentLocation.ZipCode" class="form-control" />
            </div>
            <div class="form-group permanentLocation-toggle-target">
                <label class="control-label">New Location Country</label>
                <select asp-for="PermanentLocation.CountryId" asp-items="Model.Countries" class="form-control">
                    <option value=""></option>
                </select>
            </div>

            <div class="form-group">
                <label class="control-label">Current Location</label>
                <select asp-for="Piece.CurrentLocationId" asp-items="Model.Locations" class="form-control" id="currentLocation-toggle">
                    <option value=""></option>
                    <option value="-1">- Create New -</option>
                    <option value="-2">- Same as Permanent Location -</option>
                </select>
            </div>
            <div class="form-group currentLocation-toggle-target">
                <label class="control-label">New Location Name</label>
                <input asp-for="CurrentLocation.Name" class="form-control" placeholder="Required" />
                <span asp-validation-for="CurrentLocation.Name" class="text-danger"></span>
            </div>
            <div class="form-group currentLocation-toggle-target">
                <label class="control-label">New Location Address 1</label>
                <input asp-for="CurrentLocation.Address1" class="form-control" />
            </div>
            <div class="form-group currentLocation-toggle-target">
                <label class="control-label">New Location Address 2</label>
                <input asp-for="CurrentLocation.Address2" class="form-control" />
            </div>
            <div class="form-group currentLocation-toggle-target">
                <label class="control-label">New Location City</label>
                <input asp-for="CurrentLocation.City" class="form-control" />
            </div>
            <div class="form-group currentLocation-toggle-target">
                <label class="control-label">New Location State</label>
                <input asp-for="CurrentLocation.State" class="form-control" />
            </div>
            <div class="form-group currentLocation-toggle-target">
                <label class="control-label">New Location Zip Code</label>
                <input asp-for="CurrentLocation.ZipCode" class="form-control" />
            </div>
            <div class="form-group currentLocation-toggle-target">
                <label class="control-label">New Location Country</label>
                <select asp-for="CurrentLocation.CountryId" asp-items="Model.Countries" class="form-control">
                    <option value=""></option>
                </select>
            </div>

            <hr />

            <div>
                <h4>Insurance</h4>
            </div>
            <div class="form-group">
                <label class="control-label">Policy Number</label>
                <input asp-for="Piece.InsurancePolicyNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Amount Insured</label>
                <input asp-for="Piece.InsuranceAmount" class="form-control money-mask" />
            </div>
            <div class="form-group">
                <label class="control-label">Insurance Expiration Date</label>
                <input asp-for="Piece.InsuranceExpirationDate" class="form-control date-picker" />
            </div>
            <div class="form-group">
                <label class="control-label">Insurance Carrier</label>
                <input asp-for="Piece.InsuranceCarrier" class="form-control" />
            </div>
            <hr />
        </div>
        <div class="col-md-4">
            <h4>Artist</h4>
            <div class="form-group">
                <select asp-for="Piece.ArtistId" asp-items="Model.Artists" class="form-control" id="artist-toggle">
                    <option value=""></option>
                    <option value="-1">- Create New -</option>
                </select>
            </div>
            <div class="form-group artist-toggle-target">
                <label class="control-label">New Artist Name</label>
                <input asp-for="Artist.Name" class="form-control" placeholder="Required" />
                <span asp-validation-for="Artist.Name" class="text-danger"></span>
            </div>
            <div class="form-group artist-toggle-target">
                <label class="control-label">New Artist Psuedonym</label>
                <input asp-for="Artist.AlsoKnownAs" class="form-control" />
            </div>
            <div class="form-group artist-toggle-target">
                <label class="control-label">New Artist City of Origin</label>
                <input asp-for="Artist.CityOfOrigin" class="form-control" />
            </div>
            <div class="form-group artist-toggle-target">
                <label class="control-label">New Artist State of Origin</label>
                <input asp-for="Artist.StateOfOrigin" class="form-control" />
            </div>
            <div class="form-group artist-toggle-target">
                <label class="form-control" >New Artist Country of Origin</label>
                <select asp-for="Artist.CountryOfOriginId" asp-items="Model.Countries" class="form-control">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group artist-toggle-target">
                <label class="control-label">New Artist Birth Date</label>
                <input asp-for="Artist.BirthDate" class="form-control date-picker" />
                <span asp-validation-for="Artist.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group artist-toggle-target">
                <label class="control-label">New Artist Death Date</label>
                <input asp-for="Artist.DeathDate" class="form-control date-picker" />
                <span asp-validation-for="Artist.DeathDate" class="text-danger"></span>
            </div>
            <hr />
            <div>
                <h4>Creation Date</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Year</label>
                        <input asp-for="Piece.CreationYear" class="form-control year-picker year-mask" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Month</label>
                        <input asp-for="Piece.CreationMonth" class="form-control month-picker month-mask" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Day</label>
                        <input asp-for="Piece.CreationDay" class="form-control day-mask" />
                    </div>
                </div>
                <div class="col-md-12">
                    <span asp-validation-for="Piece.CreationYear" class="text-danger"></span>
                    <span asp-validation-for="Piece.CreationMonth" class="text-danger"></span>
                    <span asp-validation-for="Piece.CreationDay" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div>
                <h4>Origin</h4>
            </div>
            <div class="form-group">
                <label class="control-label">City of Origin</label>
                <input asp-for="Piece.CityOfOrigin" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">State of Origin</label>
                <input asp-for="Piece.StateOfOrigin" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Country of Origin</label>
                <select asp-for="Piece.CountryOfOriginId" asp-items="Model.Countries" class="form-control">
                    <option value=""></option>
                </select>
            </div>
            <hr />
            <div>
                <h4>Dimensions</h4>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Height</label>
                        <input asp-for="Piece.Height" class="form-control text-right" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Width</label>
                        <input asp-for="Piece.Width" class="form-control text-right" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Depth</label>
                        <input asp-for="Piece.Depth" class="form-control text-right" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Unit of Measure</label>
                        <select asp-for="Piece.UnitOfMeasureId" asp-items="Model.UnitsOfMeasure" class="form-control"></select>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Piece.IsFramed" /> @Html.DisplayNameFor(model => model.Piece.IsFramed)
                        </label>
                    </div>
                    <div><span asp-validation-for="Piece.Height" class="text-danger"></span></div>
                    <div><span asp-validation-for="Piece.Width" class="text-danger"></span></div>
                    <div><span asp-validation-for="Piece.Depth" class="text-danger"></span></div>
                </div>
            </div>
            <hr />
            <div>
                <h4>Copyright</h4>
            </div>
            <div class="form-group">
                <label class="control-label">Year</label>
                <input asp-for="Piece.CopyrightYear" class="form-control year-picker year-mask" />
                <span asp-validation-for="Piece.CopyrightYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Owner</label>
                <input asp-for="Piece.CopyrightOwner" class="form-control" />
            </div>
            <hr />
        </div>
        <div class="col-md-4">
            <h4>Acquisition</h4>
            <div class="form-group">
                <select asp-for="Piece.AcquisitionId" asp-items="Model.Acquisitions" class="form-control" id="acquisition-toggle">
                    <option value="-1">- Create New -</option>
                    <option value="">- Skip Acquisition Creation -</option>
                </select>
            </div>
            <div class="form-group acquisition-toggle-target">
                <label class="control-label">New Acquisition Date</label>
                <input asp-for="Acquisition.Date" class="form-control date-picker" />
                <span asp-validation-for="Acquisition.Date" class="text-danger"></span>
            </div>
            <div class="form-group acquisition-toggle-target">
                <label class="control-label">Piece Source</label>
                <select asp-for="Acquisition.PieceSourceId" asp-items="Model.PieceSources" class="form-control toggle" id="pieceSource-toggle">
                    <option value=""></option>
                    <option value="-1">- Create New -</option>
                </select>
                <span asp-validation-for="Acquisition.PieceSourceId" class="text-danger"></span>
            </div>
            <div class="form-group acquisition-toggle-target pieceSource-toggle-target">
                <label class="control-label">New Piece Source</label>
                <input asp-for="PieceSource.Name" class="form-control" />
            </div>
            <div class="form-group acquisition-toggle-target">
                <label>Cost</label>
                <div class="input-group">
                    <span class="input-group-addon">$</span>
                    <input asp-for="Acquisition.Cost" class="form-control text-right money-mask" />
                </div>
                <span asp-validation-for="Acquisition.Cost" class="text-danger"></span>
            </div>
            <div class="form-group acquisition-toggle-target">
                <label class="control-label">Funding Source</label>
                <select asp-for="Acquisition.FundingSourceId" asp-items="Model.FundingSources" class="form-control toggle" id="fundingSouce-toggle">
                    <option value=""></option>
                    <option value="-1">- Create New -</option>
                </select>
            </div>
            <div class="form-group acquisition-toggle-target fundingSouce-toggle-target">
                <label class="control-label">New Funding Source</label>
                <input asp-for="FundingSource.Name" class="form-control" />
            </div>
            <div class="form-group acquisition-toggle-target">
                <label class="control-label">Terms</label>
                <textarea rows="6" asp-for="Acquisition.Terms" class="form-control"></textarea>
            </div>

            <hr />
            <div class="form-group">
                <label class="control-label">Collection</label>
                <select asp-for="Piece.CollectionId" asp-items="Model.Collections" class="form-control toggle" id="collection-toggle">
                    <option value=""></option>
                    <option value="-1">- Create New -</option>
                </select>
            </div>
            <div class="form-group collection-toggle-target">
                <label class="control-label">New Collection</label>
                <input asp-for="Collection.Name" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
